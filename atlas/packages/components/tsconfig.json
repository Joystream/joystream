{
	"extends": "../../tsconfig.json",

	"compilerOptions": {
		"module": "esnext",
		"lib": ["ES2019"],
		"rootDirs": ["src", "stories"],
		"baseUrl": ".",
		"paths": {
			"*": ["*", "./src/*"],
			"assets/*": ["./assets/*"]
		},
		"jsx": "preserve",
		"declaration": true,
		"declarationDir": "dist/types"
	},

	"exclude": ["node_modules", "dist", "stories"]
}
