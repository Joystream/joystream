    "@types/lowdb": "^1.0.9",
    "bn.js": "^4.11.8",
    "dotenv": "^8.2.0",
    "fs": "^0.0.1-security",
    "lowdb": "^1.0.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@polkadot/ts": "^0.3.14",
    "@types/chai": "^4.2.11",
    "@types/uuid": "^7.0.2",
    "chai": "^4.2.0",
    "prettier": "2.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
