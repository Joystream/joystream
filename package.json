{
  "name": "storage-node",
  "version": "1.0.0",
  "description": "Joystream Storage Node",
  "scripts": {
    "test": "mocha tests/**/*.js",
    "lint": "eslint paths/**/*.js lib/**/*.js",
    "dev": "npm-run-all --parallel server",
    "build": "npm-run-all --parallel server",
    "server": "nodemon --watch api-base.yml --watch bin/ --watch paths/ --watch lib/ --verbose --exec node bin/cli.js --ext jsx,js"
