{
  "name": "joystream-storage",
  "version": "0.1.0",
  "description": "Joystream Storage Node",
  "author": "Joystream",
  "homepage": "https://github.com/Joystream/storage-node-joystream",
  "bugs": {
    "url": "https://github.com/Joystream/storage-node-joystream/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joystream/storage-node-joystream.git"
  },
  "license": "GPL-3.0",
  "contributors": [
    {
      "name": "Jens Finkhaeuser",
      "email": "jens@finkhaeuser.de",
      "url": "https://finkhaeuser.de/"
    }
  ],
  "keywords": [
    "joystream",
    "storage",
    "node"
  ],
  "os": [ "darwin", "linux" ],

  "scripts": {
    "test": "mocha test/**/*.js",
    "lint": "eslint paths/**/*.js lib/**/*.js",
    "dev": "npm-run-all --parallel server",
    "build": "yarn install && git checkout node_modules/joystream && yarn run tsc --build tsconfig.json",
    "server": "nodemon --watch api-base.yml --watch bin/ --watch paths/ --watch lib/ --verbose --exec node bin/cli.js --ext jsx,js"
  },
  "bin": {
    "js_storage": "bin/cli.js"
  },

  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.13.0",
    "express": "^4.16.4",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "supertest": "^3.4.2",
    "temp": "^0.9.0",
    "typescript": "^3.4.2"
  },
  "dependencies": {
    "@polkadot/api": "^0.76.1",
    "@polkadot/ts": "^0.1.56",
    "async": "^2.6.2",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "configstore": "^4.0.0",
    "cors": "^2.8.5",
    "express-openapi": "^4.5.0",
    "figlet": "^1.2.1",
    "file-type": "^10.11.0",
    "hyperdrive": "^9.14.5",
    "js-yaml": "^3.13.1",
    "meow": "^5.0.0",
    "mime-types": "^2.1.22",
    "multer": "^1.4.1",
    "secp256k1": "^3.6.2",
    "si-prefix": "^0.2.0",
    "stream-buffers": "^3.0.2",
    "uuid": "^3.3.2"
  }
}
