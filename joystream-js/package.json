{
  "name": "@joystream/js",
  "version": "0.1.0",
  "description": "Joystream typescript library providing helpers for common frontend applications tasks (querying, extrinsics, formatting etc.)",
  "author": "Joystream contributors",
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc --build tsconfig.json",
    "develop": "tsc --watch",
    "lint": "eslint ./ --ext .ts --ignore-path .gitignore",
    "ts-check": "tsc --noEmit --pretty",
    "circular": "madge --circular .",
    "pretty": "prettier ./ --write --ignore-path .gitignore",
    "checks": "yarn build && yarn circular && prettier ./ --check --ignore-path .gitignore && yarn lint"
  },
  "dependencies": {
    "@polkadot/api": "1.26.1",
    "@polkadot/keyring": "^3.0.1",
    "@joystream/types": "^0.14.0",
    "bn.js": "^5.1.2"
  },
  "devDependencies": {
    "ts-node": "^8.8.2",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Joystream/joystream.git"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/Joystream/joystream/issues"
  },
  "homepage": "https://github.com/Joystream/joystream"
}
