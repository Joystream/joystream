{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [ "node", "mocha" ],
    "typeRoots": [
        "./src/node_modules/@types"
    ] 
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["./src/templates/scaffold/mappings/*.ts"]
}
